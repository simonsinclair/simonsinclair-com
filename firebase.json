{
  "hosting": {
    "public": "public",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "headers": [
      {
        "source": "/",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }]
      },

      {
        "source": "**/*.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }]
      },

      {
        "source": "/_next/static/**",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }]
      }
    ]
  }
}
